page{
  box-sizing: content-box;
  background-color:#fff;
  height: 100%;
  width: 100%;
}
.container{
  width: 100%;
  height: 100%;
}
.talk-title{
  font-size: 20px;
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 15px;
  border-bottom: 1rpx solid #999;
}
.my-voice{
  width: 100%;
  height: 100rpx;
  font-size: 16px;
  color: #999;
  margin-top:20rpx; 
  position: relative;
  display:  flex;
  flex-direction: row;
}
.my-voice .text{
  display: inline-block;
  height: 100%;
  line-height: 100rpx;
  padding-left: 5px;
}
.my-voice input{
  height: 100%;
  line-height: 100rpx;
  display: inline-block;
}
.my-voice .send{
  display: inline-block;
  width: 100rpx;
  height: 40rpx;
  color: #fff;
  line-height: 40rpx;
  text-align: center;
  background-color: #01468B;
  border-radius: 10rpx;
  font-size: 12px;
  position: absolute;
  top: 30rpx;
  right: 50rpx;
}
.histpry-list{
  padding: 0 5px;
  margin:20rpx 0;
}
.histpry-list .title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: rgba(1, 70, 129, .1);
  margin-bottom: 20rpx;
}
.histpry-list .record{
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 14px;
  color: #999;
  margin-left: 10rpx;
}
.record text{
  margin: 0 5rpx;
}
.list-item .id{
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  padding-top: 20rpx;
}
.list-item .id image{
  width: 100%;
  height: 100%;
}