.header {
	background: #01468B;
	padding: 30rpx;
}
.header .avatar {
	display: block;
	margin: 0 auto;
	width: 160rpx;
	height: 160rpx;
	border-radius: 50%;
  overflow: hidden;
}
.header .nickname {
	color: #000;
	font-size: 22px;
	line-height: 2.4;
	text-align: center;
}

.section {
	padding: 0;
	color: #2e2e2e;
	font-size: 30rpx;
}
.section .iden {
	margin-left: 30rpx;
	padding-right: 30rpx;
	line-height: 3;
	border-bottom: 1px solid #efefef;
}
.section .iden:last-child {
	border-bottom: none;
}
.section .iden input{
  height: 100%;
  line-height: 3;
  display:  inline-block;
}
.section .line {
	margin-left: 30rpx;
	padding-right: 30rpx;
	line-height: 3;
	border-bottom: 1px solid #efefef;
}
.section .line:last-child {
	border-bottom: none;
}
