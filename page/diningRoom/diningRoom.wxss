page {
	height: 100%;
	overflow: hidden;
}
.container {
	height: 100%;
	overflow: hidden;
}

.header {
	position: relative;
	background: #01468B;
	padding: 20rpx 40rpx;
	color: #000;
	-webkit-transition: all 0.6s ease-in-out;
}
.header.hidden {
	/*-webkit-transform: translate3d(0,-290rpx,0);*/
	margin-top: -290rpx;
}
.header .logo {
	float: left;
	width: 160rpx;
	height: 160rpx;
	border: 2rpx solid #fff;
	border-radius: 50%;
	margin-right: 10px;
}
.header .name {
	padding-top: 20rpx;
	font-size: 36rpx;
	line-height: 60rpx;
}
.header .welcome {
	color: #333;
	font-size: 30rpx;
	width: 360rpx;
	line-height: 70rpx;
}
.header .follow {
	position: absolute;
	right: 20px;
	top: 50px;
	font-size: 30rpx;
	line-height: 2;
	padding: 0 0.7em;
	border: 1rpx solid;
	border-radius: 30rpx;
}
.header .desc {
	color: #333;
	font-size: 30rpx;
	line-height: 40rpx;
	padding-top: 20rpx;
}

.content-container {
	display: -webkit-flex;
  width: 100%;
	height: 100%;
	box-sizing: border-box;
	padding-bottom: 100rpx;
}

.goods-container {
	-webkit-flex: 1;
	background: #ffffff;
	height: 100%;
}
.goods-container .goods {
  width: 100%;
	position: relative;
	padding: 20rpx 30rpx;
	font-size: 36rpx;
	line-height: 40rpx;
	border-bottom: 1px solid #999;
  display:-webkit-box;
  -webkit-box-align: center;
  -webkit-box-orient: horizontal;

}
.goods .left{
  flex: 1;
}
.goods .left .pic {
	float: left;
	width: 130rpx;
	height: 130rpx;
	margin-right: 20rpx;
}
.goods .right{
  flex: 2;
  display:-webkit-box;
  -webkit-box-align: center;
  -webkit-box-orient: vertical;
  background-color: #fff;
}
.goods .right .name {
  flex: 1;
	color: #000;
	font-size: 36rpx;
	line-height: 46rpx;
}
.goods .right .desc {
  flex: 1;
	color: #000;
	font-size: 30rpx;
	line-height: 46rpx;
  padding-top: 30rpx;
}
.goods .button{
  height: 60rpx;
  width: 180rpx;
  position: absolute;
  top: 50%;
  right: 10%;
  transform: translateY(-50%);
	background-color  : #01468B;
  color: #fff;
	font-size: 28rpx;
	line-height: 60rpx;
  border-radius: 30rpx;
  text-align: center;
}